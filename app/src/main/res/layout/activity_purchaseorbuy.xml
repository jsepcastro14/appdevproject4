<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/returnbtn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/returnbtn"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home"
            android:padding="12dp"
            android:scaleType="centerInside"
            />

        <!-- Product Image -->
        <ImageView
            android:id="@+id/dialogProductImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/emptyimage"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>

        <!-- Product Name -->
        <TextView
            android:id="@+id/dialogProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"
            android:gravity="center"/>

        <!-- Product Description -->
        <TextView
            android:id="@+id/dialogProductCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product category: "
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="4dp"/>

        <!-- Product Price -->
        <TextView
            android:id="@+id/dialogProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$67.00"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Quantity Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginEnd="16dp"/>

            <ImageButton
                android:id="@+id/plus"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/plus"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Home"
                android:padding="12dp"
                android:scaleType="centerInside"
                />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:text="1"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="#212121"
                android:background="#FFFFFF"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <ImageButton
                android:id="@+id/minus"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/minus"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Home"
                android:padding="12dp"
                android:scaleType="centerInside"
                />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnAddToCart"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="ADD TO CART"
                android:textSize="16sp"
                android:textAllCaps="false"

                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="BUY NOW"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <!-- Total Price -->
        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: $67.67"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:gravity="center"
            android:layout_marginTop="8dp"/>


    </LinearLayout>

</LinearLayout>